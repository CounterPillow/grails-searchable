<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
   "-//Compass/Compass Core Mapping DTD 1.0//EN"
   "http://www.opensymphony.com/compass/dtd/compass-core-mapping.dtd">
<compass-core-mapping>
  <class name='Album' alias='work' root='true'>
    <id name='id' />
    <property name='version'>
      <meta-data>version</meta-data>
    </property>
    <property name='name'>
      <meta-data boost='1.5'>name</meta-data>
    </property>
    <property name='genre'>
      <meta-data index='un_tokenized'>genre</meta-data>
    </property>
    <!--<reference ref-alias='composer' name='artist' />-->
    <component ref-alias='composer' name='artist' />
  </class>
</compass-core-mapping>